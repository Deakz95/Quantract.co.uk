# Copy to .env.local and fill in values.

# Required base configuration
# Public (client-side) branding
NEXT_PUBLIC_QT_BRAND_NAME="Quantract"
NEXT_PUBLIC_QT_BRAND_TAGLINE="Electrical & Building Services"

# Server-side branding defaults
QT_BRAND_NAME="Quantract"
QT_BRAND_TAGLINE="Electrical & Building Services"

# App URLs (required for production)
APP_BASE_URL="http://localhost:3000"
APP_ORIGIN="http://localhost:3000"
NEXT_PUBLIC_BASE_URL="http://localhost:3000"
NEXT_PUBLIC_APP_ORIGIN="http://localhost:3000"

# Data storage (optional - only for file-based mode)
QT_DATA_PATH=".qt-data.json"
QT_UPLOAD_PATH=".qt-uploads"

# Auth / admin defaults (optional)
QT_ADMIN_EMAIL="admin@demo.com"
QT_ENGINEER_EMAILS="engineer@demo.com"

# Feature flags
QT_USE_PRISMA="1"  # Set to "1" for production with database
QT_ALLOW_MANUAL_PAY="false"
QT_DEFAULT_COMPANY_NAME="Quantract"
QT_DEFAULT_COMPANY_SLUG="quantract"
QT_DEFAULT_COST_RATE_PER_HOUR="45"

# Database (required for production)
DATABASE_URL="postgresql://USER:PASS@HOST:5432/quantract"
# For Neon, also set:
# DIRECT_DATABASE_URL="postgresql://USER:PASS@HOST:5432/quantract?sslmode=require"

# Email (required for sending quotes/invoices)
RESEND_API_KEY="re_XXXXXXXXXXXXXXXXXXXXXXXXXXXX"
RESEND_FROM="Quantract <no-reply@yourdomain.com>"
FROM_EMAIL="Quantract <no-reply@yourdomain.com>"

# Stripe (required for billing)
STRIPE_SECRET_KEY="sk_test_XXXXXXXXXXXXXXXXXXXXXXXXXXXX"
STRIPE_WEBHOOK_SECRET="whsec_XXXXXXXXXXXXXXXXXXXXXXXXXXXX"
STRIPE_PRICE_SOLO="price_XXXXXXXXXXXXXXXX"
STRIPE_PRICE_TEAM="price_XXXXXXXXXXXXXXXX"
STRIPE_PRICE_PRO="price_XXXXXXXXXXXXXXXX"

# Neon Auth (if using Neon authentication)
# NEON_AUTH_BASE_URL="https://..."

# Xero integration (optional)
XERO_CLIENT_ID=""
XERO_CLIENT_SECRET=""
XERO_REDIRECT_URI="http://localhost:3000/api/admin/xero/oauth/callback"
XERO_SCOPES="offline_access accounting.transactions accounting.contacts accounting.settings"

# Quantract AI (optional)
OPENAI_API_KEY=""
# OPENAI_MODEL="gpt-4o-mini"
