# Local Development Environment
# Copy this to .env.local and update as needed

# =============================================================================
# DATABASE (Required)
# =============================================================================
# For local development with Docker Postgres:
DATABASE_URL="postgresql://quantract:dev_password_local@localhost:5433/quantract_dev"
DIRECT_URL="postgresql://quantract:dev_password_local@localhost:5433/quantract_dev"

# For Neon Postgres (production format):
# DATABASE_URL="postgresql://USER:PASS@HOST-pooler.eu-west-2.aws.neon.tech/DB?sslmode=require&pgbouncer=true&connection_limit=1"
# DIRECT_URL="postgresql://USER:PASS@HOST.eu-west-2.aws.neon.tech/DB?sslmode=require"

# =============================================================================
# APP URLS (Required)
# =============================================================================
APP_ORIGIN="http://localhost:3000"
NEXT_PUBLIC_APP_ORIGIN="http://localhost:3000"
APP_BASE_URL="http://localhost:3000"

# Production domains (for reference):
# APP_ORIGIN="https://crm.quantract.co.uk"
# NEXT_PUBLIC_APP_ORIGIN="https://crm.quantract.co.uk"
# APP_BASE_URL="https://crm.quantract.co.uk"

# =============================================================================
# AUTHENTICATION (Optional for local dev)
# =============================================================================
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="devpassword123"
ADMIN_NAME="Dev Admin"

# =============================================================================
# PRISMA / DATABASE MODE (Required)
# =============================================================================
QT_USE_PRISMA="1"

# =============================================================================
# EMAIL SERVICE - Resend (Optional for local dev)
# =============================================================================
# RESEND_API_KEY="re_..."
# RESEND_FROM="Quantract <no-reply@quantract.co.uk>"

# =============================================================================
# STRIPE PAYMENTS (Optional for local dev)
# =============================================================================
# Use test mode keys for development
# STRIPE_SECRET_KEY="sk_test_..."
# STRIPE_PUBLISHABLE_KEY="pk_test_..."
# STRIPE_WEBHOOK_SECRET="whsec_..."
# STRIPE_PRICE_SOLO="price_..."
# STRIPE_PRICE_TEAM="price_..."
# STRIPE_PRICE_PRO="price_..."

# =============================================================================
# MONITORING - Sentry (Optional for local dev)
# =============================================================================
# SENTRY_DSN="https://xxx@xxx.ingest.sentry.io/xxx"

# =============================================================================
# AI FEATURES - OpenAI (Optional)
# =============================================================================
# OPENAI_API_KEY="sk-..."

# =============================================================================
# ACCOUNTING - Xero (Optional)
# =============================================================================
# XERO_CLIENT_ID=""
# XERO_CLIENT_SECRET=""
# XERO_REDIRECT_URI="https://crm.quantract.co.uk/api/admin/xero/oauth/callback"

# =============================================================================
# BRANDING (Optional)
# =============================================================================
NEXT_PUBLIC_QT_BRAND_NAME="Quantract"
NEXT_PUBLIC_QT_BRAND_TAGLINE="Electrical & Building Services"
QT_BRAND_NAME="Quantract"
QT_BRAND_TAGLINE="Electrical & Building Services"

# =============================================================================
# NEXT.JS SETTINGS
# =============================================================================
NODE_ENV="development"
NEXT_TELEMETRY_DISABLED="1"
