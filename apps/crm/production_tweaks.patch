+"use client";
+
+import { useMemo, useState } from "react";
+import Link from "next/link";
+import { Button } from "@/components/ui/Button";
+import { Dialog, DialogBody, DialogContent, DialogHeader, DialogTitle } from "@/components/ui/Dialog";
+import type { Role } from "@/components/AppShell";
+
+function dispatchOpenAi() {
+  // Allows you to plug in your own AI widget without coupling AppShell to it.
+  // Your bot can listen for this event: window.addEventListener('qt:open-ai', ...)
+  window.dispatchEvent(new CustomEvent("qt:open-ai"));
+}
+
+export default function ShellTopActions({ role }: { role: Role }) {
+  const [supportOpen, setSupportOpen] = useState(false);
+  const [newOpen, setNewOpen] = useState(false);
+
+  const supportEmail = useMemo(() => {
+    const to = "support@quantract.co.uk";
+    const subject = encodeURIComponent("Quantract support");
+    const body = encodeURIComponent("Hi Quantract,\n\nI need help with…\n\nThanks");
+    return `mailto:${to}?subject=${subject}&body=${body}`;
+  }, []);
+
+  return (
+    <>
+      <Button variant="secondary" type="button" onClick={() => setSupportOpen(true)}>
+        Support
+      </Button>
+      <Button type="button" onClick={() => setNewOpen(true)}>
+        New
+      </Button>
+
+      <Dialog open={supportOpen} onOpenChange={(o: boolean) => setSupportOpen(o)}>
+        <DialogContent>
+          <DialogHeader>
+            <div className="flex items-center justify-between gap-3">
+              <DialogTitle>Support</DialogTitle>
+              <Button variant="ghost" type="button" onClick={() => setSupportOpen(false)}>
+                Close
+              </Button>
+            </div>
+          </DialogHeader>
+          <DialogBody>
+            <div className="grid gap-3">
+              <div className="rounded-2xl border border-slate-200 bg-white p-4">
+                <div className="text-sm font-semibold text-slate-900">AI Assistant</div>
+                <div className="mt-1 text-xs text-slate-600">Open your in-app assistant for quick answers and help drafting replies.</div>
+                <div className="mt-3">
+                  <Button type="button" onClick={dispatchOpenAi}>
+                    Open AI assistant
+                  </Button>
+                </div>
+              </div>
+
+              <div className="rounded-2xl border border-slate-200 bg-white p-4">
+                <div className="text-sm font-semibold text-slate-900">Contact support</div>
+                <div className="mt-1 text-xs text-slate-600">Opens your email app with a pre-filled message.</div>
+                <div className="mt-3 flex flex-wrap gap-2">
+                  <a className="inline-flex" href={supportEmail}>
+                    <Button type="button" variant="secondary">
+                      Email support
+                    </Button>
+                  </a>
+                  <Button type="button" variant="secondary" onClick={() => window.alert("Docs link coming next.")}
+                  >
+                    View docs
+                  </Button>
+                </div>
+              </div>
+
+              {role === "client" ? (
+                <div className="rounded-2xl border border-slate-200 bg-white p-4">
+                  <div className="text-sm font-semibold text-slate-900">Client help</div>
+                  <div className="mt-1 text-xs text-slate-600">Need something changed before accepting a quote? Use “Request a change” on the quote.</div>
+                </div>
+              ) : null}
+            </div>
+          </DialogBody>
+        </DialogContent>
+      </Dialog>
+
+      <Dialog open={newOpen} onOpenChange={(o: boolean) => setNewOpen(o)}>
+        <DialogContent>
+          <DialogHeader>
+            <div className="flex items-center justify-between gap-3">
+              <DialogTitle>Create new</DialogTitle>
+              <Button variant="ghost" type="button" onClick={() => setNewOpen(false)}>
+                Close
+              </Button>
+            </div>
+          </DialogHeader>
+          <DialogBody>
+            <div className="grid gap-3">
+              {role === "admin" ? (
+                <>
+                  <Link href="/admin/quotes/new" className="block" onClick={() => setNewOpen(false)}>
+                    <div className="rounded-2xl border border-slate-200 bg-white p-4 hover:bg-slate-50">
+                      <div className="text-sm font-semibold text-slate-900">Quote</div>
+                      <div className="mt-1 text-xs text-slate-600">Create a new quote and send to a client.</div>
+                    </div>
+                  </Link>
+                  <Link href="/admin/clients" className="block" onClick={() => setNewOpen(false)}>
+                    <div className="rounded-2xl border border-slate-200 bg-white p-4 hover:bg-slate-50">
+                      <div className="text-sm font-semibold text-slate-900">Client</div>
+                      <div className="mt-1 text-xs text-slate-600">Add a client record (mobile-friendly form is next).</div>
+                    </div>
+                  </Link>
+                  <Link href="/admin/jobs" className="block" onClick={() => setNewOpen(false)}>
+                    <div className="rounded-2xl border border-slate-200 bg-white p-4 hover:bg-slate-50">
+                      <div className="text-sm font-semibold text-slate-900">Job</div>
+                      <div className="mt-1 text-xs text-slate-600">Create a job and assign an engineer.</div>
+                    </div>
+                  </Link>
+                  <Link href="/admin/invoices" className="block" onClick={() => setNewOpen(false)}>
+                    <div className="rounded-2xl border border-slate-200 bg-white p-4 hover:bg-slate-50">
+                      <div className="text-sm font-semibold text-slate-900">Invoice</div>
+                      <div className="mt-1 text-xs text-slate-600">Create an invoice (manual or from a quote).</div>
+                    </div>
+                  </Link>
+                </>
+              ) : (
+                <div className="rounded-2xl border border-slate-200 bg-white p-4 text-sm text-slate-700">
+                  New actions are available for admins.
+                </div>
+              )}
+            </div>
+          </DialogBody>
+        </DialogContent>
+      </Dialog>
+    </>
+  );
+}
